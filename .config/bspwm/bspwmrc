#!/usr/bin/env zsh

sxhkd &

python ~/.config/scrypts/monitors_setup.py

# Kill programs before starting them (if they were open)
pidof picom && killall picom
pidof dunst && killall dunst


# Reset top and bottom padding in case polybars was changed
bspc config top_padding 0
bspc config bottom_padding 0

dunst &

# pywal


# Status bar(s)
python .config/polybar/launch.py

# Polkit
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# wallpaper
feh --no-fehbg --bg-fill /home/baker/.config/scrypts/wallpapers/skyrim-tomb.jpg /home/baker/.config/scrypts/wallpapers/temple.jpg

# Compositor
picom --experimental-backends &

# Reload termite configs
killall -USR1 termite

bspc config border_width 2
bspc config window_gap 10

bspc config split_ratio          0.50

bspc config borderless_monocle true
bspc config gapless_monocle true

bspc config automatic_scheme alternate

bspc config normal_border_color "#2c2620"
bspc config focused_border_color "#826d57"
bspc config active_border_color "#5a5047"


bspc config presel_feedback_color "#828257"

xsetroot -cursor_name left_ptr &

bspc rule -a gimp desktop='^5' follow=on focus=on
bspc rule -a Inkscape desktop='^5' follow=on focus=on
bspc rule -a firefox desktop='^1' follow=on focus=on
bspc rule -a Org.gnome.Nautilus desktop='^4' follow=on focus=on
bspc rule -a Thunar desktop='^4' follow=on focus=on
bspc rule -a Code desktop='^2' follow=on focus=on
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

notify-send "From $(uname -n)" "Hey $(whoami)!\nLet's get the show on the road!"