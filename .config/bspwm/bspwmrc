#!/bin/sh

sxhkd &

# Setup monitors
autorandr --change

# Manage desktops
python ~/.config/scrypts/bspwm_manage_desktops.py

# Kill programs before starting them (if they were open)
pidof picom && killall picom
pidof dunst && killall dunst

bspc config top_padding 20
bspc config bottom_padding 45
bspc config right_padding 20
bspc config left_padding 20
bspc config border_width 3
bspc config window_gap 10
bspc config split_ratio 0.50
bspc config borderless_monocle false
bspc config gapless_monocle false
bspc config automatic_scheme alternate

bspc config normal_border_color "#02283C"
bspc config focused_border_color "#87906A"
bspc config active_border_color "#918675"
bspc config urgent_border_color "#B28855"
bspc config presel_feedback_color "#87906A"

# 3rd party
dunst &
python .config/polybar/launch.py &
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
feh --no-fehbg --bg-fill /home/breton/Pictures/wallpapers/moon4.jpg &
picom --experimental-backends &

# Night mode
python ~/.config/scrypts/night_mode/main.py no_toggle

# Reload termite configs
killall -USR1 termite

# Set cursor to pointer
xsetroot -cursor_name left_ptr &
# Keyboard delay and rate
xset r rate 250 30

notify-send "Started BSPWM using `audot query config modifier`"
