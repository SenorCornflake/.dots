#########
# MISIL #
#########

# Lower/Raise volume
XF86Audio{Lower,Raise}Volume
    pulseaudio-ctl {down,up}

# Mute
XF86AudioMute
    pulseaudio-ctl mute

F12
    scrot '%Y-%m-%d_$wx$h_scrot.png' -e 'mv $f ~/Pictures'

# Restart bspwm
super + x
    bspc wm -r

# Restart sxhkd
super + Escape
    killall sxhkd && sxhkd &

# Brightness
super + XF86Audio{Lower,Raise}Volume
    brightnessctl s 10%{-,+}

# Terminal
super + Return
    WINIT_X11_SCALE_FACTOR=1 alacritty

# Close window
super + w
    bspc node --close

# Focus in direction
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

# Focus desktop
super + {1-9,0}
    bspc desktop --focus {1-9,10}

# Switch window states
super {u,i,o,p}
    bspc node --state {floating,fullscreen,tiled,pseudo_tiled}

# Switch between monocle and tiled
super + d
    bspc desktop -l next

# Application launcher
super + a
    rofi -modi drun -show drun -theme-str "prompt \{ enabled: false; \}"

# List custom commands
super + c
    python ~/.config/scrypts/commander/main.py

# Rotate desktop
super + r
    bspc node @/ -R 90

# Send to desktop
super + shift + {1-9,0}
    bspc node --to-desktop {1-9,10}

# Swap window in direction
super + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

# Kill window
super + shift + w
    bspc node --kill

# Move windows
alt + shift + {h,j,k,l}
    bspc node --move {-40 0, 0 40, 0 -40, 40 0}

# Resize by removing
control + super + {h,j,k,l}
    bspc node --resize {right -40 -40, top 40 40, bottom -40 -40, left 40 40}

# Resize by adding
control + alt + {h,j,k,l}
    bspc node --resize {left -40 -40, bottom 40 40, top -40 -40, right 40 40}

# Preselection dir
alt + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}

# Preselection size
alt + {1-9}
    bspc node --presel-ratio 0.{1-9} 

# Cancel all preselections
alt + c
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Cycle through windows forwards
alt + Tab
    bspc node next.local -f

# Cycle through window backwards
alt + shift + Tab
    bspc node prev.local -f

# Rofi show list of open windows
alt + space
    rofi -modi window -show window -columns 1

