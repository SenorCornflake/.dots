[colors]
background = #222222
background-alt = #333333
foreground = #ffffff
foreground-alt = #777777
underline = #558899
alert = #ed0b0b

[bar/bar]
wm-restack = bspwm
bottom = false

width = 100%
height = 30
offset-x = 0
offset-y = 0
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

font-0 = Source Code Pro:size=10:weight=bold
font-1 = NotoEmoji:scale=10:fontformat=truetype
font-2 = Source Code Pro:size=10:weight=black

modules-left = bspwm xwindow
modules-right = network cpu temperature memory pulseaudio date2 date1
;modules-center = xwindow

module-margin-left = 1

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.underline}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/memory]
type = internal/memory

format = <label>

label = RAM %gb_used%/%gb_total%
label-background = ${colors.background-alt}
label-underline = ${colors.underline}
label-padding = 1


[module/network]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = Net %downspeed%
label-connected-background = ${colors.background-alt}
label-connected-padding = 1
label-connected-underline = ${colors.underline}

label-disconnected = Not Connected
label-disconnected-background = ${colors.background-alt}
label-disconnected-padding = 1
label-disconnected-underline = ${colors.underline}


[module/cpu]
type = internal/cpu
format = <label>

label = CPU %percentage%%
label-background = ${colors.background-alt}
label-padding = 1
label-underline = ${colors.underline}


[module/temperature]
type = internal/temperature

thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input

format = <label>
format-warm = <label-warn>

label = TEMP %temperature-c%
label-background = ${colors.background-alt}
label-underline = ${colors.underline}
label-padding = 1

label-warn = OVERHEATING %temperature-c%
label-warn-padding = 1
label-warn-background = ${colors.background-alt}
label-warn-foreground = ${colors.alert}
label-warn-underline = ${colors.underline}


[module/pulseaudio]
type = internal/pulseaudio

sink = <alsa_output.pci-0000_00_1b.0.analog-stereo>

interval = 5

format-volume = <label-volume>
format-muted = <label-muted>

label-volume = VOL %percentage%
label-volume-background = ${colors.background-alt}
label-volume-underline = ${colors.underline}
label-volume-padding = 1

label-muted = 🔇 muted
label-muted-background = ${colors.background-alt}
label-muted-underline = ${colors.underline}
label-muted-padding = 1
label-muted-foreground = #999999
click-right = pavucontrol &


[module/date1]
type = internal/date

date = %a %d/%m/%Y

format = <label>

label = %date%
label-background = ${colors.background-alt}
label-underline = ${colors.underline}
label-padding = 1

[module/date2]
type = internal/date

time = %H:%M

format = <label>

label = %time%
label-background = ${colors.background-alt}
label-underline = ${colors.underline}
label-padding = 1


[module/xwindow]
type = internal/xwindow
format = <label>

label = %title%
label-font = 3
label-maxlen = 80
;label-background = ${colors.background-alt}
label-padding = 1
label-underline = ${colors.underline}
