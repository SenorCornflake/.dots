#!/usr/bin/env bash

hc() {
    herbstclient "$@"
}

# SETTINGS #
hc set window_gap '15'
hc set smart_window_surroundings off
hc set mouse_recenter_gap 0
hc set hide_covered_windows on
hc set tree_style '╾│ ├└╼─┐'
hc set auto_detect_monitors on

# FRAME #
hc set default_frame_layout 'grid'
hc set frame_border_width '0'
hc set frame_bg_transparent 'on'
hc set frame_transparent_width 0
hc set frame_gap '0'
hc set always_show_frame on
hc set smart_frame_surroundings off
hc set frame_padding 0
hc set frame_border_normal_color '#343d46'
hc set frame_border_active_color '#a7c777'
hc set frame_bg_normal_color '#1b2b3480'
hc set frame_bg_active_color '#1b2b3480'

# ATTRS #
hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1
hc attr theme.title_height 0
hc attr theme.inner_width '0'
hc attr theme.outer_width '0'
hc attr theme.padding_top 0
hc attr theme.padding_right 0
hc attr theme.padding_bottom 0
hc attr theme.padding_left '10'
hc attr theme.border_width '0'
hc attr theme.title_font 'Dina:size=10'

# COLORS #
hc attr theme.normal.title_color '#d4be98'
hc attr theme.active.title_color '#343d46'
hc attr theme.active.color '#a7c777'
hc attr theme.normal.color '#343d46'
hc attr theme.urgent.color '#c594c5'
hc attr theme.inner_color '#343d46'
hc attr theme.inner_width '0'
hc attr theme.outer_color '#343d46'
hc attr theme.outer_width '0'
hc attr theme.background_color '#1b2b34'
