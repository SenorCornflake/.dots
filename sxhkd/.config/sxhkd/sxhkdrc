
# Open Terminal
super + Return
    kitty

# App launcher
super + space
    rofi -modi drun -show drun -show-icons


# Toggle mute
XF86AudioMute
    pulseaudio-ctl mute

# Toggle mic mute
XF86AudioMicMute
    pulseaudio-ctl mute-input

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 5

# reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

F12
    import -window root ~/Pictures/`date '+%Y%m%d%M%S%s%N'`.jpg && notify-send "Imagemagick" "Screenshot Taken."
# restart or quit bspwm
super + alt + {r,q}
    bspc {wm -r, quit}

# Close node, Close Single Window
super + {_,shift + } w
    bspc node {--close, --kill}

# Focus node in given direction
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

# Swap node in given direction
super + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

super + {t,shift + f,f,b}
    bspc node -t {tiled,fullscreen,floating}

# FOcues desktiop
super + {1-9,0}
    bspc desktop --focus {1-9,10}

# FOcues desktiop
super + {1-9,0}
    bspc desktop --focus {1-9,10}

super + shift + {1-9,0}
    bspc node --to-desktop {1-9,10}

# Resize node increasing
super + alt + {h,j,k,l}
    bspc node --resize {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# Resize node deccrease
super + alt + shift + {h,j,k,l}
	bspc node --resize {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# toggle monocle layout
super + m
    bspc desktop -l next

# Cycle through local nodes
super + {n,p}
    bspc node -f {next.local,prev.local}
