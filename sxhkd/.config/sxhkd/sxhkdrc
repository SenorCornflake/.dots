
# Open Terminal
super + Return
    kitty

# App launcher
super + space
    rofi -modi drun -show drun -show-icons


# Toggle mute
XF86AudioMute
    pulseaudio-ctl mute

# Toggle mic mute
XF86AudioMicMute
    pulseaudio-ctl mute-input

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 5

# reload sxhkd
super + esc
    pkill -USR1 -x sxhkd


# restart or quit bspwm
super + alt + {r,q}
    bspc {wm -r, quit}

# Close node, Close Single Window
super + {_,shift + } w
    bspc node {--close, --kill}

# Focus node in given direction
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

# Swap node in given direction
super + shift + {h,j,k,l}
    bspc node --swap {west,south,north,east}

# FOcues desktiop
super + {1-9,0}
    bspc desktop --focus {1-9,10}

# FOcues desktiop
super + {1-9,0}
    bspc desktop --focus {1-9,10}

super + shift + {1-9,0}
    bspc node --to-desktop {1-9,10}

# Resize node increasing
super + alt + {h,j,k,l}
    bspc node --resize {left -20,bottom 0 20,top 0 -20,right 20 0}

# Resize node deccrease
super + alt + shift + {h,j,k,l}
	bspc node -resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# toggle monocle layout
super + m
    bspc desktop -l next
